<% if params[:page].to_i > 1 %>
<a href="?page=<%= @prev_page %>">Prev Page</a>
<% end %>
<% if params[:page].nil? || params[:page].to_i <= (@contacts_all.length / @limit) %>
<a href="?page=<%= @next_page %>">Next Page</a>
<% end %>

<h1>Contacts</h1>

<ul>
  <% @contacts.each do |contact| %>
    <li><a href="/contacts/<%= contact.id %>"><%= contact.name %></li>
  <% end %>
</ul>
